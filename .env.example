# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=marketplace
DB_USERNAME=your_username
DB_PASSWORD=your_password

# JPA Configuration
JPA_DDL_AUTO=update
SHOW_SQL=false
FORMAT_SQL=false

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEBUG=false

# App Email Configuration
APP_EMAIL_FROM=your-email@gmail.com
APP_EMAIL_SUPPORT=your-support@gmail.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRATION=86400000

# Expiration Timers
PASSWORD_RESET_EXPIRATION = 30
VERIFICATION_EXPIRATION = 1440

# File Storage Configuration
FILE_UPLOAD_DIR=./uploads
FILE_MAX_SIZE=5242880

# Server Configuration
SERVER_PORT=8080
INCLUDE_MESSAGE=never
INCLUDE_BINDING_ERRORS=never

# Logging Configuration
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=INFO
LOG_LEVEL_SQL_PARAMS=INFO
LOG_LEVEL_MAIL=INFO

# Social Media URLs
SOCIAL_FACEBOOK=https://facebook.com/yourmarketplace
SOCIAL_TWITTER=https://twitter.com/yourmarketplace
SOCIAL_INSTAGRAM=https://instagram.com/yourmarketplace